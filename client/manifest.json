{
    "manifest_version": 3,
    "name": "AI Web Helper",
    "version": "1.0",
    "description": "AI-powered web accessibility assistant.",
    "permissions": ["activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "host_permissions": [
      "http://localhost:3000/*" 
    ]
  }